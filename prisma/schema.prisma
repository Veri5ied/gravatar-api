generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  displayName   String?
  email         String     @unique
  password      String?
  profileUrl    String?
  avatar        String?
  about         String?
  pronunciation String?
  pronouns      String?
  location      String?
  jobTitle      String?
  company       String?
  interests     String[]   @default([])
  accounts      Accounts[]
  wallets       Wallets[]
  emailtoken    String?
  active        Boolean    @default(false)
}

model Accounts {
  id        String  @id @default(cuid())
  instagram String?
  threads   String?
  twitter   String?
  tiktok    String?
  github    String?
  dribbble  String?
  twitch    String?
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}

model Wallets {
  id      String  @id @default(cuid())
  paypal  String?
  patreon String?
  venmo   String?
  bitcoin String?
  user    User    @relation(fields: [userId], references: [id])
  userId  String
}

model Contact {
  id    String  @id @default(cuid())
  email String?
  phone String?
}
